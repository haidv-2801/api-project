@model MVC.Models.PageFeedsModel
@{
    ViewBag.Title = "feedFeeds";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="row gutters">
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <a href="/Page/Post">Post to page</a>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="row gutters">
                    @foreach (var feed in Model.datas)
                    {
                        <div style="margin:0 10px 5px 0; border: 1px solid grey;">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                ID : @feed.id
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <details>
                                    <summary>
                                        <span><i class="material-icons"><a target="_blank" href="https://facebook.com/@feed.id" style="text-decoration:none;">View on FaceBook</a></i></span>
                                    </summary>
                                </details>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                MESSAGE : @feed.message
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                CREATE_TIME : @(feed.created_time)
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                FROM : 
                            </div>
                             <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    @*<details class="mb-3">
                                        <summary>
                                            <span><i class="material-icons"><a href="/feed/Feed?id=@feed.id&AccessToken=@feed.access_token" style="text-decoration:none;">See all feeds</a></i></span>
                                        </summary>
                                        <br />
                                    </details>*@
                             </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>